rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------
    // صلاحيات المدير العام
    // --------------------------
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --------------------------
    // التعليقات داخل المباريات
    // --------------------------
    match /matches/{matchId}/comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // الردود داخل التعليقات
    match /matches/{matchId}/comments/{commentId}/replies/{replyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // الإعجابات (Likes) على التعليقات والردود
    match /matches/{matchId}/comments/{commentId}/{collection}/{likeId} {
       allow read: if request.auth != null;
       allow create, delete: if request.auth != null && request.auth.uid == likeId;
    }
    
    // --------------------------
    // المفضلات (Favorites)
    // --------------------------
    match /users/{userId}/favorites/data {
      allow read, write: if request.auth.uid == userId;
    }

    // --------------------------
    // الإشعارات
    // --------------------------
     match /users/{userId}/notifications/{notificationId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // --------------------------
    // تخصيص الأسماء
    // --------------------------
    match /leagueCustomizations/{leagueId} {
        allow read: if request.auth != null;
    }
    match /countryCustomizations/{countryName} {
        allow read: if request.auth != null;
    }
    match /continentCustomizations/{continentName} {
        allow read: if request.auth != null;
    }
     match /teamCustomizations/{teamId} {
        allow read: if request.auth != null;
    }
     match /playerCustomizations/{playerId} {
        allow read: if request.auth != null;
    }
     match /coachCustomizations/{coachId} {
        allow read: if request.auth != null;
    }
     match /matchCustomizations/{fixtureId} {
        allow read: if request.auth != null;
     }

    // --------------------------
    // بيانات المباريات والتوقعات
    // --------------------------
    match /matches/{matchId} {
        allow read: if true;
    }
     match /predictions/{fixtureId} {
      allow list, read: if true;
    }
    match /predictions/{fixtureId}/userPredictions/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
     match /leaderboard/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
  }
}
